@page
@model VeggieRecipe.WebApp.Pages.AmountIngredients.CreateModel
@{
}

<head>
</head>
<body>
    <main>
        <form method="post">
            <section>
                <div class="row">
                    <div class="container-fluid">
                        @* <!--popup button start-->
                        <div class="text-center py3">
                        <button class="btn btn-outline-secondary" data-toggle="modal" data-target="#modalToAddIngredient">Add other ingredient</button>
                        </div>
                        <!--popup button end-->
                        <!--Modal start-->
                        <div class="container-fluid">
                        <div class="modal fade" id="modalToAddIngredient" tabindex="-1" role="dialog" aria-labelledby="modalForAddingIngredients">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="modalTitleIngredient">Add a new Ingredient</h5>
                        <!--need to solve this, adding new ingredients-->
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                        <div class="form-group">
                        <label for="ingredientName" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="ingredientName">
                        </div>
                        <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                        </div>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-secondary">Add</button>
                        </div>
                        </div>
                        </div>
                        </div>
                        </div> *@
                        <!--Modal end-->
                        <input type="hidden" name="recipeId" value="@Model.Recipe" />
                        <div class="row">

                            <div class="container-fluid">
                                <div class="container-fluid">
                                    <label class="form-label" for="ingredient">Select Ingredient</label>
                                    <select class="form-select" name="ingredient">
                                        <option value="">Select a ingredient</option>
                                        @foreach (var ingredient in Model.IngredientList)
                                        {
                                            <option value="@ingredient.Id">@ingredient.IngredientName</option>
                                        }
                                    </select>
                                </div>
                                <div class="container-fluid">
                                    <label class="form-label" for="mesuramentId">Mesurament</label>
                                    <select class="form-select" name="mesurament">
                                        <option value="">Select one</option>
                                        @foreach (var mesurament in Model.MesuramentList)
                                        {
                                            <option value="@mesurament.Id">@mesurament.MesuramentTitle</option>
                                        }
                                    </select>
                                </div>
                                <div class="container-fluid">
                                    <label class="form-label" for="quantity">Quantity</label>
                                    <input class="form-control" type="text" name="quantity" />
                                </div>
                                <div class="container-fluid">
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-start py-2">
                                        <button class="input btn btn-outline-secondary">Add ingredient</button>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <a class="nav-link btn btn-success text-white" asp-area="" asp-page="/Recipes/ListAll">Finalize</a> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </form>
    </main>
</body>
